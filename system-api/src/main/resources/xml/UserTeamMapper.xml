<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ptu.devCloud.mapper.UserTeamMapper">
	<resultMap id="BaseResultMap" type="com.ptu.devCloud.entity.UserTeam">
        <result column="id" property="id" />
        <result column="user_id" property="userId" />
        <result column="team_id" property="teamId" />
	</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
		 t.id
		, t.user_id
		, t.team_id
    </sql> 
    
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Long">
		SELECT         
        	<include refid="baseColumns" />
		FROM user_team t
		WHERE id = #{id}
	</select>

	<!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.ptu.devCloud.entity.UserTeam"
		keyProperty="id" keyColumn="id" >
		INSERT INTO user_team
    	<trim prefix="(" suffix=")" suffixOverrides=",">	 
    		id,
    		user_id,
    		team_id,
    	</trim>
    	<trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	#{id},                   
        	#{userId},                   
        	#{teamId},                   
    	</trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="com.ptu.devCloud.entity.UserTeam"
        keyProperty="id" keyColumn="id" >
        INSERT INTO user_team    
		<trim prefix="(" suffix=")" suffixOverrides=",">	 
			<if test="id != null">
				id,
			</if>
			<if test="userId != null">
				user_id,
			</if>
			<if test="teamId != null">
				team_id,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
			<if test="id != null" >
				#{id},                    
			</if>
			<if test="userId != null" >
				#{userId},                    
			</if>
			<if test="teamId != null" >
				#{teamId},                    
			</if>
		</trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.ptu.devCloud.entity.UserTeam">
    	UPDATE user_team
     	<set>		
			user_id = #{userId},        
			team_id = #{teamId},        
     	</set>	
    	WHERE id = #{id}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.ptu.devCloud.entity.UserTeam">
    UPDATE user_team
    	<set>
		<if test="userId != null" >
			user_id = #{userId},                 
		</if>
		<if test="teamId != null" >
			team_id = #{teamId},                 
		</if>
    </set>
    WHERE id = #{id}
    </update>



</mapper>