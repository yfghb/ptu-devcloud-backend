        </if>
                                <if test="avatar != null" >
			#{avatar},                    
        </if>
                        </trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.ptu.devCloud.entity.User">
    UPDATE user
     <set>		
                    		create_by=#{createBy},        
               		create_date=#{createDate},        
               		update_by=#{updateBy},        
               		update_date=#{updateDate},        
