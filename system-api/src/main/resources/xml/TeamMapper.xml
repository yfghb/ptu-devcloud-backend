<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE  mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ptu.devCloud.mapper.TeamMapper">
	<resultMap id="BaseResultMap" type="com.ptu.devCloud.entity.Team">
        <result column="id" property="id" />
        <result column="team_name" property="teamName" />
        <result column="create_by" property="createBy" />
        <result column="create_date" property="createDate" />
        <result column="update_by" property="updateBy" />
        <result column="update_date" property="updateDate" />
        <result column="join_type" property="joinType" />
        <result column="admin_ids" property="adminIds" />
        <result column="super_admin" property="superAdmin" />
	</resultMap>  
    
    <!-- 表字段 -->
    <sql id="baseColumns">
		 t.id
		, t.team_name
		, t.create_by
		, t.create_date
		, t.update_by
		, t.update_date
		, t.join_type
		, t.admin_ids
		, t.super_admin
    </sql> 
    
 
 	<!-- 根据主键获取单条记录 -->
    <select id="getById" resultMap="BaseResultMap" parameterType="Long">
		SELECT         
        	<include refid="baseColumns" />
		FROM team t
		WHERE id = #{id}
	</select>
    <select id="selectTeamListByUserId" resultType="com.ptu.devCloud.entity.DictItem">
		SELECT
		t.id AS "itemValue",
		t.team_name AS "itemName"
		FROM team t
		left join user_team ut on t.id = ut.team_id
		where ut.user_id = #{userId}
		ORDER BY t.create_date DESC
	</select>

    <!-- 插入全部字段 -->
    <insert id="insert" parameterType="com.ptu.devCloud.entity.Team"
		keyProperty="id" keyColumn="id" >
		INSERT INTO team
    	<trim prefix="(" suffix=")" suffixOverrides=",">	 
    		id,
    		team_name,
    		create_by,
    		create_date,
    		update_by,
    		update_date,
    		join_type,
    		admin_ids,
    		super_admin,
    	</trim>
    	<trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
        	#{id},                   
        	#{teamName},                   
        	#{createBy},                   
        	#{createDate},                   
        	#{updateBy},                   
        	#{updateDate},                   
        	#{joinType},                   
        	#{adminIds},                   
        	#{superAdmin},                   
    	</trim>
	</insert>
    
    <!-- 插入不为NULL的字段 -->
    <insert id="insertIgnoreNull" parameterType="com.ptu.devCloud.entity.Team"
        keyProperty="id" keyColumn="id" >
        INSERT INTO team    
		<trim prefix="(" suffix=")" suffixOverrides=",">	 
			<if test="id != null">
				id,
			</if>
			<if test="teamName != null">
				team_name,
			</if>
			<if test="createBy != null">
				create_by,
			</if>
			<if test="createDate != null">
				create_date,
			</if>
			<if test="updateBy != null">
				update_by,
			</if>
			<if test="updateDate != null">
				update_date,
			</if>
			<if test="joinType != null">
				join_type,
			</if>
			<if test="adminIds != null">
				admin_ids,
			</if>
			<if test="superAdmin != null">
				super_admin,
			</if>
		</trim>
		<trim prefix="VALUES (" suffix=")" suffixOverrides=",">            
			<if test="id != null" >
				#{id},                    
			</if>
			<if test="teamName != null" >
				#{teamName},                    
			</if>
			<if test="createBy != null" >
				#{createBy},                    
			</if>
			<if test="createDate != null" >
				#{createDate},                    
			</if>
			<if test="updateBy != null" >
				#{updateBy},                    
			</if>
			<if test="updateDate != null" >
				#{updateDate},                    
			</if>
			<if test="joinType != null" >
				#{joinType},                    
			</if>
			<if test="adminIds != null" >
				#{adminIds},                    
			</if>
			<if test="superAdmin != null" >
				#{superAdmin},                    
			</if>
		</trim>
    </insert>

	<!-- 更新,更新全部字段 -->
    <update id="update" parameterType="com.ptu.devCloud.entity.Team">
    	UPDATE team
     	<set>		
			team_name = #{teamName},        
			create_by = #{createBy},        
			create_date = #{createDate},        
			update_by = #{updateBy},        
			update_date = #{updateDate},        
			join_type = #{joinType},        
			admin_ids = #{adminIds},        
			super_admin = #{superAdmin},        
     	</set>	
    	WHERE id = #{id}
    </update>  
    
    
    <!-- 更新不为NULL的字段 -->
    <update id="updateIgnoreNull" parameterType="com.ptu.devCloud.entity.Team">
    UPDATE team
    	<set>
		<if test="teamName != null" >
			team_name = #{teamName},                 
		</if>
		<if test="createBy != null" >
			create_by = #{createBy},                 
		</if>
		<if test="createDate != null" >
			create_date = #{createDate},                 
		</if>
		<if test="updateBy != null" >
			update_by = #{updateBy},                 
		</if>
		<if test="updateDate != null" >
			update_date = #{updateDate},                 
		</if>
		<if test="joinType != null" >
			join_type = #{joinType},                 
		</if>
		<if test="adminIds != null" >
			admin_ids = #{adminIds},                 
		</if>
		<if test="superAdmin != null" >
			super_admin = #{superAdmin},                 
		</if>
    </set>
    WHERE id = #{id}
    </update>



</mapper>